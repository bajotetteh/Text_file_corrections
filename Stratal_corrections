import os

# Text to be included in the HTML files
html_text = """
<!DOCTYPE html>
<html>
<head>
<title>Page Title</title>
</head>
<body>
<p>Unfortunately we are unable to recommend an antidepressant without a thorough understanding of your medical history. If there is any additional medical information you have not shared yet, please provide it so we can offer a more informed recommendation for an antidepressant</p>
</body>
</html>
"""

# Directories where the files will be saved
bar_10_corrections_path = 'C:\\Users\\Bajo\\OneDrive\\Desktop\\GMU GRA Project\\RAG_for_16770_database\\bar_10_corrections'
bar_text_10_corrections_path = 'C:\\Users\\Bajo\\OneDrive\\Desktop\\GMU GRA Project\\RAG_for_16770_database\\bar_text_10_corrections'
piefiles_9_processed_corrections_path = 'C:\\Users\\Bajo\\OneDrive\\Desktop\\GMU GRA Project\\RAG_for_16770_database\\piefiles_9_processed_corrections'


# Function to create HTML files in the specified directory
def create_html_files(file_name, directory):
    full_path = os.path.join(directory, file_name)
    with open(full_path, 'w') as file:
           file.write(html_text)
    print(f"File created: {full_path}")

# Function to create an empty HTML file
def create_empty_html_file(file_name, directory):
    full_path = os.path.join(directory, file_name)
    with open(full_path, 'w') as file:
        file.write("")  # Writing an empty string for an empty file
    print(f"Empty file created: {full_path}")

